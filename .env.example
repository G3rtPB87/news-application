# .env.example - Copy this to .env and fill in your actual credentials

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DB_NAME=news_application_db
DB_USER=news_user
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=3306

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=your-email@gmail.com

# X/Twitter API Configuration
X_API_KEY=your-x-api-key-here
X_API_SECRET=your-x-api-secret-here
X_ACCESS_TOKEN=your-x-access-token-here
X_ACCESS_SECRET=your-x-access-secret-here